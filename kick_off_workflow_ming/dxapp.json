{
  "name": "kick_off_workflow_ming",
  "title": "kick_off_workflow_ming",
  "summary": "This applet will kick off a work from a given folder",
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "statsrecord",
      "label": "stats_record",
      "help": ".state_record generated by bcl2fastq app",
      "class": "record",
      "patterns": ["*.stats_record"],
      "optional": false
    },
    {
      "name": "script",
      "label": "script",
      "help": "",
      "class": "file",
      "patterns": ["*.sh"],
      "optional": true
    },
    {
      "name": "Parent_Project",
      "label": "Name of Parent_Project",
      "help": "",
      "class": "string",
      "optional": false,
      "default": "Upload"
    }
  ],
  "outputSpec": [
    {
      "name": "workflow_summary",
      "label": "workflow summary File",
      "help": "",
      "class": "file",
      "patterns": ["*"]
    }
  ],
  "runSpec": {
    "file": "src/code.sh",
    "release": "14.04",
    "interpreter": "bash",
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "distribution": "Ubuntu"
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x2"
        }
      }
    }
  }
}
