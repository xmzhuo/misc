{
  "name": "coverage_of_key_genes_new",
  "title": "Coverage of Key Genes",
  "summary": "This applet will calculate and plot the coverage of key genes for your input bam(s)",
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "bq",
      "label": "Min Base Quality",
      "help": "",
      "class": "int",
      "optional": false
    },
    {
      "name": "mq",
      "label": "Min Mapping Quality",
      "help": "",
      "class": "int",
      "optional": false
    },
    {
      "name": "cov",
      "label": "Min Coverage",
      "help": "",
      "class": "int",
      "optional": false
    },
    {
      "name": "gene_list",
      "label": "Gene List",
      "help": "",
      "class": "file",
      "patterns": ["*.bed"],
      "optional": false
    },
    {
      "name": "ref_genome",
      "label": "Reference Genome",
      "help": "",
      "class": "file",
      "patterns": ["*.fa"],
      "optional": false
    },
    {
      "name": "bam",
      "label": "Sample Bam",
      "help": "",
      "class": "file",
      "patterns": ["*.bam"],
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "output",
      "label": "Output Files",
      "help": "",
      "class": "array:file",
      "patterns": ["*"]
    },
    {
      "name": "summary",
      "label": "Summary File",
      "help": "",
      "class": "file",
      "patterns": ["*"]
    },
    {
      "name": "plot",
      "label": "Coverage Plot",
      "help": "",
      "class": "file",
      "patterns": ["*.pdf"]
    }
  ],
  "runSpec": {
    "file": "src/code.sh",
    "release": "16.04",
    "interpreter": "bash",
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "distribution": "Ubuntu"
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_ssd1_x8"
        }
      }
    }
  }
}
